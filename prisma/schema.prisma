// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String      @id @default(cuid())
  name          String?
  email         String?     @unique
  emailVerified DateTime?
  image         String?
  hashedPassword String?
  statusId      String?
  status        Status?     @relation("UserStatus", fields: [statusId], references: [id], onDelete: SetNull)
  priority      UserPriority @default(MEDIUM)
  projects      Project[]   @relation("ProjectOwner")
  memberProjects Project[]  @relation("ProjectMembers")
  tickets       Ticket[]    @relation("TicketAssignee")
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  @@map("users")
}

model Project {
  id          String   @id @default(cuid())
  name        String
  description String?
  ownerId     String
  owner       User     @relation("ProjectOwner", fields: [ownerId], references: [id])
  members     User[]   @relation("ProjectMembers")
  tickets     Ticket[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("projects")
}

model Status {
  id        String      @id
  name      String      @unique
  color     String
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  tickets   Ticket[]
  users     User[]      @relation("UserStatus")

  @@map("statuses")
}

enum UserPriority {
  LOW
  MEDIUM
  HIGH
}

enum TicketPriority {
  LOW
  MEDIUM
  HIGH
}

model Ticket {
  id          String   @id @default(cuid())
  title       String
  description String?
  statusId    String?
  status      Status?  @relation(fields: [statusId], references: [id], onDelete: SetNull)
  priority    TicketPriority @default(MEDIUM)
  projectId   String
  project     Project  @relation(fields: [projectId], references: [id])
  assigneeId  String?
  assignee    User?    @relation("TicketAssignee", fields: [assigneeId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("tickets")
}